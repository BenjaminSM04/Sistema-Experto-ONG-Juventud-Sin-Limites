@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using Sistema_Experto_ONG_Juventud_Sin_Limites.Components.Account.Shared
@using Microsoft.AspNetCore.Authorization
@using MudBlazor

@implements IDisposable

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <MudIcon Icon="@Icons.Material.Filled.Grass" Size="Size.Small" Class="brand-icon" />
            <span class="brand-text">Juventud Sin Límites</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <!-- Principal -->
        <div class="nav-section-header px-3">
            <span class="nav-section-title">Principal</span>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Small" Class="nav-icon" /> Inicio
            </NavLink>
        </div>

        <AuthorizeView Context="mainAuth">
            <Authorized>
                <!-- Programas -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="programas">
                        <MudIcon Icon="@Icons.Material.Filled.Folder" Size="Size.Small" Class="nav-icon" /> Programas
                    </NavLink>
                </div>

                <!-- POAs -->
                <AuthorizeView Roles="Administrador,Coordinador" Context="poaAuth">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="poas">
                                <MudIcon Icon="@Icons.Material.Filled.Assessment" Size="Size.Small" Class="nav-icon" /> Plan Operativo
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Motor de Inferencia -->
                <AuthorizeView Roles="Administrador,Coordinador" Context="motorAuth">
                    <Authorized>
                        <div class="nav-section-header px-3">
                            <span class="nav-section-title">Sistema Experto</span>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/motor">
                                <MudIcon Icon="@Icons.Material.Filled.Psychology" Size="Size.Small" Class="nav-icon" /> Motor IA
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Administración -->
                <AuthorizeView Roles="Administrador" Context="adminAuth">
                    <Authorized>
                        <div class="nav-section-header px-3">
                            <span class="nav-section-title">Administración</span>
                        </div>
                        
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/usuarios">
                                <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Small" Class="nav-icon" /> Usuarios
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin/motor/reglas">
                                <MudIcon Icon="@Icons.Material.Filled.Rule" Size="Size.Small" Class="nav-icon" /> Reglas Motor
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- Mi Cuenta -->
                <div class="nav-section-header px-3">
                    <span class="nav-section-title">Mi Cuenta</span>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" Class="nav-icon" /> Mi Perfil
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link logout-btn">
                            <MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Small" Class="nav-icon" /> Cerrar Sesión
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <MudIcon Icon="@Icons.Material.Filled.Login" Size="Size.Small" Class="nav-icon" /> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <!-- Footer del sidebar -->
        <div class="nav-footer px-3">
            <div class="version-info">
                <span>v1.0.0</span>
            </div>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

